<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <data>
        <variable
            name="viewModelHome"
            type="com.example.wutmygainz.HomeViewModel" />
        <variable
            name="fragmentHome"
            type="com.example.wutmygainz.HomeFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/historic_price_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/historic_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="center"
                android:hint="@string/historic_price_text"
                android:text="@{String.format(@string/historic_price, viewModelHome.historicPrice)}"
                android:textColor="@color/black"
                android:textSize="@dimen/price_text_size"
                app:layout_constraintTop_toTopOf="parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/current_price_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/historic_price_text" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/current_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="center"
                android:hint="@string/current_price_text"
                android:textColor="@color/black"
                android:text="@{String.format(@string/current_price, viewModelHome.currentPrice)}"
                android:textSize="@dimen/price_text_size"
                app:layout_constraintTop_toTopOf="parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gainz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box_outline_c"
            android:clickable="true"
            android:inputType="datetime"
            android:padding="30dp"
            android:text="+65%"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:backgroundTint="@color/purple_500"
            app:layout_constraintBottom_toTopOf="@+id/date_picker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_price_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:padding="12dp"
            android:clickable="true"
            android:text="@{viewModelHome.selectedDate}"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_box_outline_a"
            android:onClick="@{() -> fragmentHome.datePickerDialog()}"
            app:layout_constraintBottom_toTopOf="@+id/currency_pair_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:id="@+id/currency_pair_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:hint="Currency Pairs"
            app:layout_constraintBottom_toBottomOf="parent" >

            <AutoCompleteTextView
                android:id="@+id/currency_pairs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="BTC-USD"
                android:textSize="24dp"
                android:textStyle="bold"/>
        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>