<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    
    <data>
        <variable
            name="investments"
            type="com.example.wutmygainz.database.Investments" />
        <variable
            name="viewModel"
            type="com.example.wutmygainz.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/currency_percent_gainz_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/currency_pair_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/gainz_text_small"
                android:text="@{investments.currencyPair}"
                android:layout_margin="@dimen/margin_small"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/gainz_percent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box_outline_c"
                android:backgroundTint="@color/purple_500"
                android:padding="@dimen/padding_small"
                android:text="%+30.23"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/gainz_text_medium"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="121dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/currency_price_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_margin="@dimen/margin_med"
            app:layout_constraintStart_toEndOf="@+id/currency_percent_gainz_group"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/current_currency_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_extra_small"
                android:text="Current Value: $4287.08"
                android:textAlignment="center"
                android:textSize="@dimen/gainz_text_small"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="121dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/purchase_price_currency_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_extra_small"
                android:text="@{String.format(@string/purchase_price, investments.investedPrice)}"
                android:textAlignment="center"
                android:textSize="@dimen/gainz_text_small" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/purchase_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_extra_small"
                android:text="@{String.format(@string/purchase_date, investments.purchaseDate)}"
                android:textAlignment="center"
                android:textSize="@dimen/gainz_text_small" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>